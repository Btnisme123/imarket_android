<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout android:id="@+id/sliding_layout"
                                                     xmlns:sothree="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:gravity="bottom"
                                                     sothree:umanoDragView="@+id/right_area"
                                                     sothree:umanoOverlay="true"
                                                     sothree:umanoPanelHeight="@dimen/common_size_80"
                                                     sothree:umanoParalaxOffset="@dimen/common_size_100"
                                                     sothree:umanoShadowHeight="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/right_area">

            <fragment android:id="@+id/map"
                      android:name="com.google.android.gms.maps.SupportMapFragment"
                      xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:map="http://schemas.android.com/apk/res-auto"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_store_name"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:background="@color/grey"
                            android:padding="@dimen/common_size_5"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/common_text_size_16"/>

                        <LinearLayout
                            android:id="@+id/layout_switch"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/common_size_5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mode"
                                android:layout_width="@dimen/common_size_100"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/layout_margin_left"
                                android:textSize="@dimen/common_text_size_16"
                                android:text="@string/check_store"
                                android:textColor="@color/white"/>

                            <Switch
                                android:id="@+id/switch1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_view_name_market"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_size_3"
                            android:text="@string/market_name_text"
                            android:textColor="@color/white"
                            android:textSize="@dimen/common_text_size_18"
                            android:gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_list_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:background="@drawable/custom_textview"
                    android:visibility="gone">

                    <ListView
                        android:layout_gravity="center"
                        android:id="@+id/list_floor"
                        android:layout_width="@dimen/width_height_70"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_store_type"
                    android:layout_width="@dimen/wid_hei_250"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:background="@drawable/custom_textview"
                    android:visibility="gone"/>

            </fragment>

        </FrameLayout>

        <ScrollView
            android:id="@+id/right_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginRight="@dimen/layout_margin_right"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:clickable="true"
            android:focusable="false">

            <LinearLayout
                android:id="@+id/layout_additional"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginRight="@dimen/layout_margin_right"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:background="@color/background_visible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/image_button_slide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/background_visible"
                        android:src="@drawable/up_arrow"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_visible"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/layout_margin_comment"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_show_dialog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/common_size_20"
                            android:padding="@dimen/common_size_10"
                            android:paddingRight="@dimen/common_size_10"
                            android:text="@string/make_edge"/>

                        <Button
                            android:id="@+id/btn_delete_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/common_size_20"
                            android:padding="@dimen/common_size_10"
                            android:paddingRight="@dimen/common_size_10"
                            android:text="@string/delete_point"/>

                        <Button
                            android:id="@+id/btn_find_path"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/common_size_20"
                            android:padding="@dimen/common_size_10"
                            android:paddingRight="@dimen/common_size_10"
                            android:text="@string/draw_path"/>
                        <EditText
                            android:layout_width="@dimen/size_50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edt_delete"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/layout_margin_comment"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btn_demo_find_way"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/common_size_20"
                            android:padding="@dimen/common_size_10"
                            android:paddingRight="@dimen/common_size_10"
                            android:text="@string/find_way"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="@dimen/padding_5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_diagram_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:scrollbars="none"/>
    </RelativeLayout>
</RelativeLayout>
