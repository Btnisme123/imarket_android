<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item_recycler_navigation_drawer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/common_size_5"
              android:paddingTop="@dimen/common_size_5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_icon"
                android:layout_width="@dimen/width_height_50"
                android:layout_height="@dimen/width_height_50"
                android:layout_marginLeft="@dimen/common_size_20"
                android:src="@drawable/ic_iphone7"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_height_50"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_size_30"
                    android:text="@string/name"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size_17"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>