<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:orientation="vertical"
              android:paddingLeft="@dimen/common_size_5"
              android:paddingTop="@dimen/common_size_5">

    <TextView
        android:id="@+id/text_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/text_solid"
        android:textSize="@dimen/common_size_20"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_hire"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_hire"
            android:layout_width="@dimen/common_size_30"
            android:layout_height="@dimen/common_size_30"
            android:layout_gravity="center"
            android:background="@drawable/job_search"
            android:clickable="true"/>

        <TextView
            android:id="@+id/text_hire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="3 vị trí tuyển dụng"
            android:layout_marginLeft="@dimen/common_size_10"
            android:textColor="@color/red_text"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_10"
        android:id="@+id/layout_sale"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_sale"
            android:layout_width="@dimen/common_size_30"
            android:layout_height="@dimen/common_size_30"
            android:layout_gravity="center"
            android:background="@drawable/sales"
            android:clickable="true"/>

        <TextView
            android:id="@+id/text_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="5 sản phẩm khuyến mãi"
            android:layout_marginLeft="@dimen/common_size_10"
            android:textColor="@color/red_text"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
