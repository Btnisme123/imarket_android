<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_5">

    <TextView
        android:id="@+id/text_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size_15"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_hire"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_hire"
            android:layout_width="@dimen/common_size_20"
            android:layout_height="@dimen/common_size_20"
            android:layout_gravity="center"
            android:background="@drawable/job_search"
            android:clickable="true"/>

        <TextView
            android:id="@+id/text_hire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fake_recruitment"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/common_text_size_10"
            android:textStyle="italic"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:id="@+id/layout_sale"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_sale"
            android:layout_width="@dimen/common_size_20"
            android:layout_height="@dimen/common_size_20"
            android:layout_gravity="center"
            android:background="@drawable/sales"
            android:clickable="true"/>

        <TextView
            android:id="@+id/text_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fake_promotion"
            android:textStyle="italic"
            android:textSize="@dimen/common_text_size_10"
            android:layout_marginLeft="@dimen/margin_5"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>
