<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/common_size_3"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/item_recycler_market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_market"
            android:src="@drawable/logo_big_c"
            android:layout_width="@dimen/recycler_market_item_image_size"
            android:layout_height="@dimen/recycler_market_item_image_size"
            android:layout_margin="@dimen/common_size_10"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="@string/name_market"
                android:textSize="@dimen/common_text_size_24"
                android:textStyle="italic"/>

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="@string/address_bigC"
                android:textSize="@dimen/common_text_size_16"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>