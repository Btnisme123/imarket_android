<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/margin_5"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_avatar_item_message_rate"
            android:background="@drawable/avatar"
            android:layout_width="@dimen/width_height_50"
            android:layout_height="@dimen/width_height_50" />

        <TextView
            android:layout_width="@dimen/width_height_1"
            android:background="@android:color/white"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_name_user"
                android:text="@string/name_user"
                android:textColor="@color/text_color3"
                android:textStyle="bold"
                android:textSize="@dimen/common_text_size_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="left"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_20">

                <ImageView
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:id="@+id/image_start_item_1"
                    android:layout_width="@dimen/common_size_20"
                    android:background="@drawable/ic_star_full"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:id="@+id/image_start_item_2"
                    android:layout_width="@dimen/common_size_20"
                    android:background="@drawable/ic_star_full"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:id="@+id/image_start_item_3"
                    android:layout_width="@dimen/common_size_20"
                    android:background="@drawable/ic_star_full"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:id="@+id/image_start_item_4"
                    android:layout_width="@dimen/common_size_20"
                    android:background="@drawable/ic_star_half"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:id="@+id/image_start_item_5"
                    android:layout_width="@dimen/common_size_20"
                    android:background="@drawable/ic_star_empty"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_content_item_message_rate"
                android:text="@string/message_rate"
                android:textSize="@dimen/common_text_size_14"
                android:layout_width="match_parent"
                android:textColor="@color/text_color3"
                android:background="@android:color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>