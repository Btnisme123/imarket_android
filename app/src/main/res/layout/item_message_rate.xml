<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_avatar_item_message_rate"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:src="@drawable/avatar"
        android:layout_marginRight="@dimen/margin_10dp" />
    
    <LinearLayout
        android:id="@+id/ln_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/image_avatar_item_message_rate">
        <TextView
            android:id="@+id/text_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_medium_size"
            android:text="@string/accept"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_start_item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_full"

                    android:scaleType="center"/>
                <ImageView
                    android:id="@+id/image_start_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_full"
                    android:scaleType="center"/>

                <ImageView
                    android:id="@+id/image_start_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_full"
                    android:scaleType="center"/>

                <ImageView
                    android:id="@+id/image_start_item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_full"
                    android:scaleType="center"/>

                <ImageView
                    android:id="@+id/image_start_item_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_empty"
                    android:scaleType="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_rated_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_darker"
                android:textSize="@dimen/text_small_size"
                android:text="@string/action_save"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title_item_message_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_small_size"
            android:textStyle="bold"
            android:text="@string/action_search"
            android:layout_marginTop="@dimen/margin_5"/>
        <TextView
            android:id="@+id/text_content_item_message_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_small_size"
            android:text="@string/address_bigC"/>
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"/>
</RelativeLayout>