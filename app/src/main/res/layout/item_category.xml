<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="@dimen/common_size_3"
                                    app:cardPreventCornerOverlap="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/linearlayout_category"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/common_size_200"
                  android:clickable="true"
                  android:orientation="vertical">

        <ImageView
            android:background="@color/white"
            android:id="@+id/image_category"
            android:layout_width="@dimen/common_size_170"
            android:layout_height="@dimen/common_size_150"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginBottom="@dimen/common_size_20"
            android:id="@+id/text_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_20"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
