<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_ava_store"
            android:layout_width="@dimen/wid_hei_80"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_10dp"
            android:src="@drawable/banner1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_20dp">

            <TextView
                android:id="@+id/text_name_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bic_C"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_medium_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_hastag_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hast_tag_bicc"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_small_size"
                android:layout_marginTop="@dimen/margin_5dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_1"
        android:background="@color/bg_bg_color"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"/>

    <include
        layout="@layout/rate_product_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_1"
        android:background="@color/bg_bg_color"
        android:layout_margin="@dimen/margin_5dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_message_rate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5" />
</LinearLayout>