<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/wid_hei_400"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/text_title_dialog_confirm_book"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wid_hei_60"
        android:background="@color/color_primary"
        android:gravity="center"
        android:text="@string/request_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_21"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_marque"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_40"
        android:background="@color/color_primary"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/info_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_19"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_1"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_name_user_dialog_confirm_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_second_primary"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10dp"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="@dimen/common_text_size_19"/>

        <EditText
            android:id="@+id/edtext_name_user_dialog_confirm_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/color_third_primary"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10dp"
            android:text="@string/name_user"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_20"/>

        <TextView
            android:layout_width="@dimen/width_height_1"
            android:layout_height="match_parent"
            android:background="@color/color_primary"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_1"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_email_user_dialog_confirm_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_second_primary"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10dp"
            android:text="@string/email"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="@dimen/common_text_size_19"/>

        <EditText
            android:id="@+id/edtext_email_user_dialog_confirm_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/color_third_primary"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10dp"
            android:text="@string/mail_com"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_20"/>

        <TextView
            android:layout_width="@dimen/width_height_1"
            android:layout_height="match_parent"
            android:background="@color/color_primary"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_1"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_phonenumber_user_dialog_confirm_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_second_primary"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10dp"
            android:text="@string/phonenumbershop"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="@dimen/common_text_size_19"/>

        <EditText
            android:id="@+id/edtext_phonenumber_user_dialog_confirm_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/color_third_primary"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10dp"
            android:text="@string/hint_number"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_20"/>

        <TextView
            android:layout_width="@dimen/width_height_1"
            android:layout_height="match_parent"
            android:background="@color/color_primary"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_1"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_height_50"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttn_cancel_dialog_confirm_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_primary"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_20"/>

        <TextView
            android:layout_width="@dimen/width_height_1"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <Button
            android:id="@+id/buttn_ok_dialog_confirm_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_primary"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_20"/>

    </LinearLayout>


</LinearLayout>