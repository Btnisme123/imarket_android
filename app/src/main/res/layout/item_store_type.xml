<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_recycler_market"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar_store_type"
        android:layout_width="@dimen/recycler_market_item_image_size"
        android:layout_height="@dimen/recycler_market_item_image_size"
        android:layout_margin="@dimen/common_size_10"
        android:scaleType="fitXY"
        android:src="@drawable/food_avatar"/>

    <TextView
        android:id="@+id/name_store_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/common_size_40"
        android:layout_weight="1"
        android:paddingBottom="@dimen/common_size_5"
        android:text="@string/food_store"
        android:textColor="@color/grey"
        android:textSize="@dimen/common_text_size_20"
        android:textStyle="bold"/>

</LinearLayout>
