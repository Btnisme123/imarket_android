<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_comment"
            android:orientation="vertical"
            android:padding="@dimen/padding_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text_size_12"
                android:textStyle="italic"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_email_book_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_mail_tungb"
                    android:textColor="@color/text_color3"
                    android:textColorHint="@color/text_color4"
                    android:textSize="@dimen/common_text_size_20"/>

                <Button
                    android:id="@+id/button_clear_email"
                    android:layout_width="@dimen/width_height_34"
                    android:layout_height="@dimen/width_height_34"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_clear"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_comment"
                android:text="@string/phone_number"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text_size_12"
                android:textStyle="italic"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_phone_book_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_number"
                    android:textColor="@color/text_color3"
                    android:textColorHint="@color/text_color4"
                    android:textSize="@dimen/common_text_size_20"/>

                <Button
                    android:id="@+id/button_clear_phonenumber"
                    android:layout_width="@dimen/width_height_34"
                    android:layout_height="@dimen/width_height_34"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_clear"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_comment"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButtonOnline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/bg_radio_color"
                    android:text="@string/buy_online"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/common_text_size_20"/>

                <LinearLayout
                    android:id="@+id/linear_buy_online"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_comment"
                        android:text="@string/address_ship"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/common_text_size_12"
                        android:textStyle="italic"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edit_address_ship"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/address_hint"
                            android:textColor="@color/text_color3"
                            android:textColorHint="@color/text_color4"
                            android:textSize="@dimen/common_text_size_20"/>

                        <Button
                            android:id="@+id/button_clear_address_ship"
                            android:layout_width="@dimen/width_height_34"
                            android:layout_height="@dimen/width_height_34"
                            android:layout_gravity="right"
                            android:background="@drawable/ic_clear"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_comment"
                        android:text="@string/time_ship"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/common_text_size_12"
                        android:textStyle="italic"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_hour_ship"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/layout_margin_comment"
                            android:text="@string/time_time"
                            android:textColor="@color/text_color2"
                            android:textSize="@dimen/common_text_size_20"/>

                        <TextView
                            android:layout_width="@dimen/width_height_1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/padding"
                            android:background="@color/text_color2"/>

                        <TextView
                            android:id="@+id/text_day_ship"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/layout_margin_comment"
                            android:text="@string/date_date"
                            android:textColor="@color/text_color2"
                            android:textSize="@dimen/common_text_size_20"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_comment"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButtonOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/bg_radio_color"
                    android:text="@string/buy_offline"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/common_text_size_20"/>

                <LinearLayout
                    android:id="@+id/linear_buy_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_comment"
                        android:text="@string/time_go_shop"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/common_text_size_12"
                        android:textStyle="italic"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_time_in"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/layout_margin_comment"
                            android:text="@string/time_time"
                            android:textColor="@color/text_color2"
                            android:textSize="@dimen/common_text_size_20"/>

                        <TextView
                            android:layout_width="@dimen/width_height_1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/padding"
                            android:background="@color/text_color2"/>

                        <TextView
                            android:id="@+id/text_day_in"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/layout_margin_comment"
                            android:text="@string/date_date"
                            android:textColor="@color/text_color2"
                            android:textSize="@dimen/common_text_size_20"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/layout_margin"
                android:gravity="center"
                android:background="@color/bg_button_color"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_continue_book_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_button_color"
                    android:text="@string/continueeee"
                    android:textSize="@dimen/common_text_size_20"/>
            </LinearLayout>

            <TextView
                android:id="@+id/login_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_margin"
                android:paddingRight="@dimen/common_size_5"
                android:text="@string/login_with_other"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/common_text_size_18"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>