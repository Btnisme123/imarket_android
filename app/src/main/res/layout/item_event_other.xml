<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    card_view:cardCornerRadius="@dimen/radius_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_height_101"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_events"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_16"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_content_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_time_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_share_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:gravity="right"
                android:text="@string/share_on_facebook"
                android:textColor="@color/blue"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>